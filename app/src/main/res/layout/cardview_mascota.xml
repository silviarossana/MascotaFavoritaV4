<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagenes_principal_cardview"
            android:src="@drawable/perritouno"/>



        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnLike"
                        android:layout_width="@dimen/imagenes_cardview"
                        android:layout_height="@dimen/imagenes_cardview"
                        android:src="@drawable/dog_bone_blanco"/>

                    <TextView
                        android:id="@+id/tvNombreMascotaCV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nombreMascota"
                        android:textSize="@dimen/nombre_cardview"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|center_vertical">

                <TextView
                    android:id="@+id/tvLikeMascotaCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/likeMascota"
                    android:textSize="@dimen/like_cardview"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btnCantLike"
                    android:layout_width="@dimen/imagenes_cardview"
                    android:layout_height="@dimen/imagenes_cardview"
                    android:src="@drawable/dog_bone_amarillo"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>